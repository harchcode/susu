{
  "name": "susu",
  "version": "1.0.0",
  "description": "Simple JS framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "javascript",
    "typescript",
    "framework",
    "view"
  ],
  "author": "Hartono Chandra",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/harchcode/susu"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "build:example": "rimraf dist-example && parcel build example/index.html --out-dir dist-example",
    "dev:example": "parcel example/index.html --port 1234 --hmr-port 1235",
    "format": "prettier --write \"{lib,example}/**/*.ts\"",
    "lint": "eslint './{lib,example}/**/*.{js,ts}'",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "{lib,example}/**/*.{js,ts}": [
      "eslint . --fix"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  }
}
